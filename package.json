{
  "name": "vui-breadcrumbs",
  "version": "0.5.0",
  "description": "Mixins and CSS for applying breadcrumb styles",
  "scripts": {
    "clean": "rimraf breadcrumbs.css && rimraf breadcrumbs-less.css",
    "lint:css": "csslint breadcrumbs.css",
    "prebuild": "npm run clean",
    "build:icons" : "imgtoless -p vui- -o breadcrumbs-icons.less *.png && imgtoscss -p vui- -o breadcrumbs-icons.scss *.png",
    "build:less": "lessc breadcrumbs.css.less > breadcrumbs-less.css",
    "build:sass": "node-sass --output-style expanded breadcrumbs.css.scss breadcrumbs.css",
    "build": "npm run build:icons && npm run build:sass && npm run build:less",
    "postbuild": "npm run lint:css",
    "pretest": "npm run build",
    "test": "karma start karma.conf.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/valence-ui-breadcrumbs.git"
  },
  "keywords": [
    "d2l",
    "valence-ui",
    "vui"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/valence-ui-breadcrumbs/issues"
  },
  "homepage": "https://github.com/Brightspace/valence-ui-breadcrumbs",
  "dependencies": {
    "vui-link": "^0.5.0"
  },
  "devDependencies": {
    "csslint": "^0.10.0",
    "images-to-variables": "^0.2.1",
    "jasmine-dom-matchers": "^0.1.0",
    "karma": "^0.12.32",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-jasmine": "^0.3.5",
    "karma-cli": "0.0.4",
    "less": "^2.5.1",
    "node-sass": "^3.1.1",
    "rimraf": "^2.3.4"
  }
}
